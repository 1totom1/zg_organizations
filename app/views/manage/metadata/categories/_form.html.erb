<%= simple_form_for @category, url: manage_metadata_categories_path, method: 'post',
  html: { class: 'form-inline' }, remote: true do |f| %>
  <%= f.input :title, class: 'form-control' %>
  <%= f.input :ancestry, as: :hidden, input_html: { value: params['ancestry'] } if params['ancestry']  %>
  <%= f.submit 'Сохранить', class: 'btn btn-default' %>
  <%= link_to 'Закрыть', '#', remote: true, class: "js-cancel_new_#{params['ancestry'].nil? ? "root_" : 'sub'}category btn btn-default" %>
<% end %>
