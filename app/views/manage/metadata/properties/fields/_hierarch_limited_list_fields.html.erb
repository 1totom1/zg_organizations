<h2>Дерево значений</h2>
<%= f.simple_fields_for :hierarch_list_items do |item_form| %>
  <%= item_form.input :parent_id, input_html: { value: params[:parent_id] } %>
  <%= item_form.input :title, input_html: {disabled: !can_change_fields?(@category, @property)} %>
  <%= item_form.link_to_remove 'Удалить' if can_change_fields?(@category, @property) %>
<% end %>
<%= f.link_to_add 'Добавить', :hierarch_list_items if can_change_fields?(@category, @property) %>
