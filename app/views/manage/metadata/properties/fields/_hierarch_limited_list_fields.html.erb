<h2>Дерево значений</h2>
<p>для создания дочернего элемента необходимо сохранить родительские</p>
<%= f.simple_fields_for :hierarch_list_items do |item_form| %>
  <%= item_form.input :title, label: false, input_html: {disabled: !can_change_fields?(@category, @property)} %>
  <%= item_form.link_to_remove 'Удалить' if can_change_fields?(@category, @property) %>
  <%= render partial: 'manage/metadata/properties/fields/hierarch_children',
    locals: {parent_form: item_form} if item_form.object.persisted? %>
<% end %>
<%= f.link_to_add 'Добавить родителя', :hierarch_list_items if can_change_fields?(@category, @property) %>

<%= f.button  :submit , name: 'save_and_return', value: 'Сохранить элементы', class: 'btn btn-default' %>
<br>
